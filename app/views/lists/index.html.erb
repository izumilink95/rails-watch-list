<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path('cinema.jpg') %>');">
  <h2><span id="banner-typed-text"></span></h2>
</div>

<div class="container">
  <div class="list-cards">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="list-card">
          <%= link_to list, class: "card-link" do %>
            <div class="inner-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
              <%# <%= link_to list, class: "btn btn-delete", data: { toggle: "modal", target: "#delete-confirm" }, method: :delete do %>
                <%# <i class="fas fa-times"></i> %>
              <%# <% end %>
              <%= list.name %>
            </div>
          <% end %>
          <%= link_to list, class: "btn-delete", method: :delete do %>
            <i class="fas fa-times"></i>
          <% end %>
        </div>
      <% else %>
        <div class="list-card">
          <%= link_to list, class: "card-link" do %>
            <div class="inner-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path('cinema.jpg') %>')">
              <%# <%= link_to list, class: "btn btn-delete", data: { toggle: "modal", target: "#delete-confirm" }, method: :delete do %>
                <%# <i class="fas fa-times"></i> %>
              <%# <% end %>
              <%= list.name %>
            </div>
          <% end %>
          <%= link_to list, class: "btn-delete", method: :delete do %>
            <i class="fas fa-times"></i>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= render "shared/modal" %>
