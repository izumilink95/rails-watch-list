<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random);">
  <%# <h2 style="text-align:center;">My Movies Lists</h2> %>
</div>

<div class="container">
  <div class="list-cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random)">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
